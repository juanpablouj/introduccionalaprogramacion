float potencia(float base, float exponente)
{
	int z,x;
	float ex;
	for (z=1; z<=ex ; z++)

		x = base*z;

	return x;
	}
float fact(int factorial)
{
	float ex,facto;
	int h;
	for (h=1 ; h<=ex ; h++)
		
		facto = h*ex;
	
	return facto;
	}
int serie(float q, float r)
{
	float suma,c;
	int x,facto;
	c = 0;
	suma = c + (x/facto);
	return suma;
}


